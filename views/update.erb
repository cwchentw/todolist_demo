<form class="form-inline" role="form" action="/update/<%= @todo.id %>" method="post">
    <div class="form-group">
        <label for="todoBody">TODO:</label>
        <input type="text" name="todo[body]" class="form-control"
               value="<%= @todo.body %>" id="todoBody">
    </div>
    <div class="form-group">
        <label for="todoCategory">Category:</label>
        <input type="text" name="todo[category]" class="form-control"
               value="<%= @todo.category %>" id="todoCategory">
    </div>
    <button type="submit" class="btn btn-default">Update</button>
</form>
